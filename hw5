from pywebio.input import input as pw_input, slider, FLOAT
from pywebio.output import put_success

ONE_KILO_CALORIE = 0.32541

ENERGY_OSTRIGH_EGG = 118
ENERGY_RABBIT = 197
ENERGY_BANANA = 87
total_energy = 0

portion_ostrigh_egg = pw_input(f'–í–≤–µ–¥—ñ—Ç—å –±–∞–∂–∞–Ω—É –ø–æ—Ä—Ü—ñ—é —Å—Ç—Ä–∞—É—Å–∏–Ω–∏—Ö —è—î—Ü—å ü•ö, –≥—Ä–∞–º'
                               f'–ö–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å {ENERGY_OSTRIGH_EGG} –∫–ö–∞–ª/100–≥—Ä', type=FLOAT)
portion_ostrich_egg_energy = (float(portion_ostrigh_egg) * ENERGY_OSTRIGH_EGG) / 100
total_energy = total_energy + portion_ostrich_egg_energy
put_success(f'–í–∏ –∑–∞–∫–∞–∑–∞–ª–∏ {portion_ostrigh_egg} –≥—Ä–∞–º—ñ–≤ —Å—Ç—Ä–∞—É—Å–∏–Ω–∏—Ö —è—î—Ü—å ü•ö,\n'
            f'–ö–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å –ø–æ—Ä—Ü—ñ—ñ {portion_ostrigh_egg}\n'
            f'–ó–∞–≥–∞–ª—å–Ω–∞ –Ω–∞–∫–æ–ø–∏—á–µ–Ω–∞ –∫–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è: {total_energy}')

portion_rabbit = slider(f'–í–≤–µ–¥—ñ—Ç—å –±–∞–∂–∞–Ω—É –ø–æ—Ä—Ü—ñ—é –∫—Ä–æ–ª–∏–∫–∞ üêá, –≥—Ä–∞–º'
                               f'–ö–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å {ENERGY_RABBIT} –∫–ö–∞–ª/100–≥—Ä', min_value=0, max_value=2500)
portion_rabbit_energy = (float(portion_rabbit) * ENERGY_RABBIT) / 100
total_energy = total_energy + portion_rabbit_energy
put_success(f'–í–∏ –∑–∞–∫–∞–∑–∞–ª–∏ {portion_rabbit} –≥—Ä–∞–º—ñ–≤ –∫—Ä–æ–ª–∏–∫–∞ üêá,\n'
            f'–ö–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å –ø–æ—Ä—Ü—ñ—ñ {portion_rabbit}\n'
            f'–ó–∞–≥–∞–ª—å–Ω–∞ –Ω–∞–∫–æ–ø–∏—á–µ–Ω–∞ –∫–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è: {total_energy}')

portion_banana = pw_input(f'–í–≤–µ–¥—ñ—Ç—å –±–∞–∂–∞–Ω—É –ø–æ—Ä—Ü—ñ—é –±–∞–Ω–∞–Ω—ñ–≤ üçå, –≥—Ä–∞–º'
                               f'–ö–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å {ENERGY_BANANA} –∫–ö–∞–ª/100–≥—Ä', type=FLOAT)
portion_banana_energy = (float(portion_banana) * ENERGY_BANANA) / 100
total_energy = total_energy + portion_banana_energy
put_success(f'–í–∏ –∑–∞–∫–∞–∑–∞–ª–∏ {portion_banana} –≥—Ä–∞–º—ñ–≤ –±–∞–Ω–∞–Ω—ñ–≤ üçå,\n'
            f'–ö–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å –ø–æ—Ä—Ü—ñ—ñ {portion_banana}\n'
            f'–ó–∞–≥–∞–ª—å–Ω–∞ –Ω–∞–∫–æ–ø–∏—á–µ–Ω–∞ –∫–∞–ª–æ—Ä—ñ–π–Ω—ñ—Å—Ç—å –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è: {total_energy}')

